{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist", // Pasta onde o código JavaScript será gerado
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*.ts"], // Inclui todos os arquivos TypeScript da pasta api
  "exclude": ["node_modules"] // Exclui node_modules da transpilação
}
